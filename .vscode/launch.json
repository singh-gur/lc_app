{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run App: Embed csv",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "embed",
                "--doc",
                "/home/gurbakhshish/dev/src/personal/lc_app/data/dummy_market_data.csv",
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Run App: Embed web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "embed",
                "--doctype",
                "web",
                "--url",
                "${input:url}",
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Run App: Ask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "ask",
                "--query",
                "${input:query}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
    ],
    "inputs": [
        {
            "id": "dbPath",
            "type": "promptString",
            "description": "Enter the path to the database",
            "default": "${workspaceFolder}/.ignore/vectordb"
        },
        {
            "id": "query",
            "type": "promptString",
            "description": "Enter the query to ask",
            "default": "Please brief the article from vector db"
        },
        {
            "id": "url",
            "type": "promptString",
            "description": "Enter the url to scrape"
    ]
}
